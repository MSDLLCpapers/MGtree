nextflow_process {

    name "Test Process MGTREE_COUNT"
    script "modules/local/mgtree/count/main.nf"
    process "MGTREE_COUNT"

    test("MGtree.py - g flag") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = Channel.of(
                    [
                        [
                            id : 'test'
                        ],
                        [
                            file("${projectDir}/test-data/testSRR11028620_parsed.tsv")
                        ]
                    ]
                )
                input[1] = Channel.of(
                    file("${projectDir}/test-data/testNoV_CDC_reference.nwk")
                )
                input[2] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

